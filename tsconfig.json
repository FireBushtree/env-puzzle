{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "env-puzzle": ["src"],
      "@/src/*": ["src/*"],
      "@/tests/*": ["tests/*"],
    },
    "declaration": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "lib", "es"]
}
